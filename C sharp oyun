public class NewMonoBehaviourScript : MonoBehaviour
{
    int sayac = 0;

    bool gameOver; // true ya da false değeri alır

    float finalNotu=96.75f;   //Burada float değişkeni olduğunu göstermek için sayının yanıjna f yazdık.


    void Start()
    {
        print(finalNotu);

       
    }

