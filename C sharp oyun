Printin içerisine değişkenlerimizi yazdırırken kısa yöntem olarak:


public class NewMonoBehaviourScript : MonoBehaviour
{

   string benimAdim="Esat";

   int yasim=21;

    void Start()
    {
        print($"Bu kodu yazanin adi:{benimAdim} ve yaşı:{yasim}"); 

       
    }


