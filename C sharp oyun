public class NewMonoBehaviourScript : MonoBehaviour
{

    bool gameOver=true; // true ya da false değeri alır

    void Start()
    {
        print(gameOver);  //bool değişkenine değer vermezsek false olarak çevirir.

       
    }
    //Çıktımız true olue


