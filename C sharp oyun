                                            while döngüsünü tanıyalım


{
    int yikanacakBardakSayisi = 4;

    private void Start()
    {
        

        while(yikanacakBardakSayisi>0)
        {
            print("sıradaki bardak yıkandı");
           yikanacakBardakSayisi--;
        }


    }
}


