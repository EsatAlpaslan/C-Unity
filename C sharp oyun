                   MATEMATİKSEL OPERATÖRLER


1-)Toplama Operatörü (+):


public class TestManager : MonoBehaviour
{
    int sayac_1 = 30;
    int sayac_2 = 20;
    void Start()
    {
        print(sayac_1+sayac_2);
    }

}





2-)Çıkarma Operatörü (-):



public class TestManager : MonoBehaviour
{
    int sayac_1 = 30;
    int sayac_2 = 20;

    int yeniSonuc;
    void Start()
    {
        yeniSonuc = sayac_2 - sayac_1;
        print(yeniSonuc);
    }

}



3-)Çarpma Operatörü:

{
    int sayac_1 = 30;
    int sayac_2 = 20;

    int yeniSonuc;
    void Start()
    {
        yeniSonuc = sayac_2 * sayac_1;
        print(yeniSonuc);
    }

}


4-)Bölme Operatörü(/):

{
    int sayac_1 = 30;
    int sayac_2 = 20;

    //int yeniSonuc;
    float yeniSonuc;
    void Start()
    {
       // yeniSonuc = sayac_1 / sayac_2;
        print(yeniSonuc);
    }

}

(Sonuc 1 çıkar çünkü int şeklinde tanımladık ve üstüne yeniSonuc u da float yapsak da yine 1 çıkıyor
Çünkü ilk iki sayıyı int diye tanımladığımızdana sonucu da int diye çıkarttı unity.Düzeltmek için
sayacları fa float içinde yazmalıyız)

{
    float sayac_1 = 30;
    float sayac_2 = 20;

    //int yeniSonuc;
    float yeniSonuc;
    void Start()
    {
       // yeniSonuc = sayac_1 / sayac_2;
        print(yeniSonuc);
    }

}


5-) ++  Operatörü:

{
    float sayac_1 = 30;
    float sayac_2 = 20;

    int baslangicDegeri = 50;
    void Start()
    {
      baslangicDegeri++;
      print(baslangicDegeri);
    }

}


 6-)

{
    float sayac_1 = 30;
    float sayac_2 = 20;

    int baslangicDegeri = 50;
    void Start()
    {
      baslangicDegeri--;
      print(baslangicDegeri);
    }

}

   

7-) Modül Operatörü (%):

{
    int birinciSayi=25;
    int ikinciSayi=4;

    int baslangicDegeri = 50;
    void Start()
    {
      
      print(birinciSayi % ikinciSayi);
    }

}

